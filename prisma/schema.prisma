generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}


model User {
  id           String     @id @default(cuid())
  name         String?    // ðŸ‘ˆ Make name optional in schema
  email        String     @unique
  password     String?    // ðŸ‘ˆ IMPORTANT: Make password optional
  experience   String?    // beginner, intermediate, expert
  interests    String[]   @default([]) // ðŸ‘ˆ Add a default empty array
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  // ... other relations

  skills       Skill[]
  careerPaths  CareerPath[]
  resume       Resume?
}


model Skill {
  id        String   @id @default(cuid())
  name      String
  level     String   // beginner, intermediate, advanced
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model CareerPath {
  id        String   @id @default(cuid())
  title     String   // e.g. Data Scientist, Full-Stack Developer
  summary   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}



model Resume {
  id        String   @id @default(cuid())
  summary   String
  education String?
  experience String?
  skills    String[]
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


